{
    "compilerOptions": {
      "lib": [
        "DOM",
        "es5",
        "es6"
      ],
      "resolveJsonModule":true,
      "target": "ESNext",
      "module": "ESNext",
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },
    "include": [
      "**/*.ts",
      "**/*.test.ts",
      "../../../packages/**/*.ts",
    ]
  }
  
