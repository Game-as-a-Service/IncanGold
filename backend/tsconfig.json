{
    "compilerOptions": {
      "lib": [
        "DOM",
        "es5",
        "es6"
      ],
      "baseUrl": ".",
      "paths": {
        "frameworks/*": ["src/frameworks/*"],
        "domain/*": ["../../packages/*"],
      },
      "target": "ESNext",
      "module": "ESNext",
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
    },
    
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },

    "include": [
      "**/*.ts",
      "**/*.test.ts",
      "../packages/**/*.ts",
    ]
  }
  
